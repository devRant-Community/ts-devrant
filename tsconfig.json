{
  "compilerOptions": {
    "strict": true,
    "outDir": "dist",
    "target": "ES2016",
    "module": "CommonJS",
    "lib": ["ESNext"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowUmdGlobalAccess": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
